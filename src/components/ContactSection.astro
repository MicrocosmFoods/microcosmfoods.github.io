---
// ContactSection.astro
---
<section id="contact" class="bg-[#F6F4EA] py-16 px-4">
  <div class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
    <!-- Contact Form (Formspree) -->
    <div>
      <h2 class="text-3xl font-bold font-chivo text-[#3C4228] mb-8">Reach out</h2>
      <form 
        action="https://formspree.io/f/your-placeholder" 
        method="POST" 
        class="space-y-6"
      >
        <div>
          <label class="block text-sm font-chivo text-[#3C4228] mb-1 uppercase tracking-wide" for="name">Name</label>
          <input type="text" id="name" name="name" required placeholder="e.g. Ã‰lie Metchnikoff" class="w-full px-4 py-3 border border-[#3C4228] rounded font-chivo bg-white text-[#3C4228] focus:outline-none focus:ring-2 focus:ring-[#BEC559]" />
        </div>
        <div>
          <label class="block text-sm font-chivo text-[#3C4228] mb-1 uppercase tracking-wide" for="email">Email</label>
          <input type="email" id="email" name="email" required placeholder="e.g. eliemetchnikoff@email.com" class="w-full px-4 py-3 border border-[#3C4228] rounded font-chivo bg-white text-[#3C4228] focus:outline-none focus:ring-2 focus:ring-[#BEC559]" />
        </div>
        <div>
          <label class="block text-sm font-chivo text-[#3C4228] mb-1 uppercase tracking-wide" for="comment">Comment</label>
          <textarea id="comment" name="comment" required placeholder="Leave us a message..." rows="4" class="w-full px-4 py-3 border border-[#3C4228] rounded font-chivo bg-white text-[#3C4228] focus:outline-none focus:ring-2 focus:ring-[#BEC559]"></textarea>
        </div>
        <button type="submit" class="bg-[#FFAC4D] hover:bg-[#FD966C] text-[#3C4228] font-chivo font-bold px-8 py-3 rounded shadow transition-colors">Submit</button>
      </form>
    </div>

    <!-- Substack Subscribe Widget -->
    <div>
      <h2 class="text-3xl font-bold font-chivo text-[#3C4228] mb-8">Or, hear from us</h2>
      <p class="mb-6 text-[#3C4228] font-chivo">Sign up for our newsletter to hear project and company updates from Microcosm Foods.</p>
      <form action="https://microcosmfoods.substack.com/subscribe" method="post" target="_blank" class="space-y-4 bg-white p-6 rounded shadow-md">
        <label for="substack-email" class="block text-sm font-chivo text-[#3C4228] mb-1 uppercase tracking-wide">Email</label>
        <input id="substack-email" name="email" type="email" required placeholder="e.g. eliemetchnikoff@email.com" class="w-full px-4 py-3 border border-[#3C4228] rounded font-chivo bg-white text-[#3C4228] focus:outline-none focus:ring-2 focus:ring-[#BEC559]" />
        <button type="submit" class="bg-[#FFAC4D] hover:bg-[#FD966C] text-[#3C4228] font-chivo font-bold px-8 py-3 rounded shadow transition-colors w-full">Sign up</button>
      </form>
    </div>
  </div>
</section> 