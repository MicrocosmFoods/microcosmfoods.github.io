---
const { id, title } = Astro.props;
---

<section id={id} class="px-4 py-8 antialiased bg-[#F6F4EA] md:py-16 h-[900px] flex items-center">
  <div class="mx-auto max-w-screen-xl w-full">
    <h2 class="text-4xl font-bold font-chivo text-gray-800 mb-12 text-center">{title}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Rachel Dutton -->
      <div class="bg-[#3C4228] rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow h-64">
        <div class="flex items-start h-full">
          <div class="flex-shrink-0 mr-6">
            <img src="/img/headshots/rachel-dutton.png" alt="Rachel Dutton" class="w-32 h-32 rounded-full object-cover" />
          </div>
          <div class="flex-1">
            <h3 class="text-2xl font-bold font-chivo text-white mb-3">Rachel Dutton</h3>
            <p class="text-gray-300 font-chivo text-sm mb-4">Founder</p>
            <p class="text-gray-200 font-chivo text-sm leading-relaxed">
              Brief bio or description of their work and expertise in fermentation science.
            </p>
          </div>
        </div>
      </div>

