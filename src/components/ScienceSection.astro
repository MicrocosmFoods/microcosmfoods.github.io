---
const { id, title, text, imgSrc } = Astro.props;
---

<section
  id={id}
  class="bg-cover bg-center relative h-[700px] flex items-end"
  style={`background-image: url(${imgSrc}); background-size: cover; background-repeat: no-repeat;`}
>
  <div class="relative z-10 max-w-screen-xl mx-auto px-4 pb-16">
    <div class="max-w-5xl">
      <p class="text-2xl md:text-4xl text-gray-800 font-chivo leading-relaxed">
        {text}
      </p>
    </div>
  </div>
</section> 